<Configuration>
    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5level ${PID:- } --- [%t] %-40.40logger{39} : %n%m%throwable"/>
        </Console>

        <File name="storage-server-file" fileName="${basePath}/storage-server-logfile.log">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5level ${PID:- } --- [%t] %-40.40logger{39} : %m%n%throwable"/>
        </File>

        <RollingFile name="storage-server-rolling-file" fileName="${basePath}/storage-server-rolling.log"
                     filePattern="${basePath}/storage-server-rolling-%d{MM-dd-yy}_%i.log.gz">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5level ${PID:- } --- [%t] %-40.40logger{39} : %m%n%throwable"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1M"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>

        <Logger name="ru.gb.core" level="DEBUG" additivity="false">
            <AppenderRef ref="storage-server-file"/>
            <AppenderRef ref="storage-server-rolling-file"/>
            <AppenderRef ref="stdout"/>
        </Logger>

        <Root level="INFO" additivity="true">
            <AppenderRef ref="stdout"/>
        </Root>

    </Loggers>
</Configuration>